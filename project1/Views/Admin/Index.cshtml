@model IEnumerable<project1.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Admin Page</h1>

<a class="btn btn-primary" asp-action="Index" asp-controller="Home">To Home Page</a>
<br />
<a class="btn btn-secondary" asp-action="MainPage" asp-controller="Catalog">To The Catalog</a>
<p>
    <a class="btn btn-primary" asp-action="CreateAnimal">Create New Animal</a>
</p>
<div class="container text-center">
    <label for="categoryForm">Please select a category:</label>
    <form name="categoryForm">
        @Html.DropDownList("id", new SelectList(ViewBag.CatList, "CategoryId", "Name"), "All", new { onchange = "categoryForm.submit()" })
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                 <img src="@item.ImagePath" height="150" width="150" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AnimalId">Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.AnimalId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
